<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <progressbutton.tonyeasy.com.mylibrary.ProgressButton
        xmlns:progressbutton="http://schemas.android.com/apk/res-auto"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff6d34"
        progressbutton:textOff="@string/dosubscribe"
        progressbutton:textOn="@string/unsubscribe"
        progressbutton:drawPadding="7dp"
        style="?android:borderlessButtonStyle"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/button_bg"/>

</RelativeLayout>
